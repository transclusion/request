{
  "name": "@transclusion/request",
  "version": "1.0.0-alpha.7",
  "description": "For making observable requests in the browser and in Node.js.",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "main": "./dist/commonjs/server.js",
  "module": "./dist/module/server.js",
  "browser": {
    "./dist/commonjs/server.js": "./dist/commonjs/browser.js",
    "./dist/module/server.js": "./dist/module/browser.js"
  },
  "scripts": {
    "build": "npm-run-all tsc-*",
    "clean": "rimraf dist",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\"",
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts'",
    "prebuild": "npm run clean",
    "precommit": "npm run lint && npm run typecheck && npm test",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "tsc-es5": "tsc -p tsconfig.commonjs.json",
    "tsc-es6": "tsc -p tsconfig.module.json",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^12.7.11",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "nock": "^11.3.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3",
    "xhr-mock": "^2.5.0"
  },
  "jest": {
    "browser": true
  }
}
