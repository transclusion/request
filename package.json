{
  "name": "@transclusion/request",
  "version": "1.1.0",
  "description": "For making observable requests in the browser and in Node.js.",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "main": "./lib/cjs/server/index.js",
  "module": "./lib/esm/server/index.js",
  "browser": {
    "./lib/cjs/server/index.js": "./lib/cjs/browser/index.js",
    "./lib/esm/server/index.js": "./lib/esm/browser/index.js"
  },
  "files": [
    "/lib"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc --module commonjs --outDir ./lib/cjs -p tsconfig.lib.json",
    "build:es": "tsc --module es6 --outDir ./lib/esm -p tsconfig.lib.json",
    "clean": "rimraf lib",
    "lint": "eslint . --ext .js,.ts",
    "postpublish": "pinst --enable",
    "prebuild": "yarn clean",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable && yarn build",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "nock": "^13.1.3",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.0",
    "semantic-release-cli": "^5.4.4",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "xhr-mock": "^2.5.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/transclusion/request.git"
  }
}
