{
  "name": "@transclusion/request",
  "version": "1.0.0-alpha.2",
  "description": "",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "main": "./dist/commonjs/server.js",
  "module": "./dist/module/server.js",
  "typings": "./dist/module/types.d.ts",
  "browser": {
    "./dist/commonjs/server.js": "./dist/commonjs/browser.js",
    "./dist/module/server.js": "./dist/module/browser.js"
  },
  "scripts": {
    "build": "npm-run-all tsc-*",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "format": "prettier --no-bracket-spacing --no-semi --print-width 120 --single-quote --write \"{src,test}/**/*.{js,ts}\"",
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts'",
    "prebuild": "npm run clean",
    "precommit": "npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "tsc-es5": "tsc -p tsconfig.commonjs.json",
    "tsc-es6": "tsc -p tsconfig.module.json"
  },
  "devDependencies": {
    "@types/node": "^8.0.29",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "jest-cli": "^21.1.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testRegex": "spec\\.js$",
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
